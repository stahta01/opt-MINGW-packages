# Based on https://github.com/msys2/MINGW-packages/tree/master/mingw-w64-gmp

OPT_PACKAGE_MINGW_PREFIX="opt-mingw-$MSYSTEM_CARCH"
_install_prefix="/opt$MINGW_PREFIX"

_realname=gmp
pkgbase=opt-mingw-${_realname}
pkgname=("${OPT_PACKAGE_MINGW_PREFIX}-${_realname}")
pkgver=4.3.2
pkgrel=1
pkgdesc="A free library for arbitrary precision arithmetic (mingw-w64)"
arch=('any')
mingw_arch=('mingw32' 'mingw64')
url="https://gmplib.org/"
license=('LGPL3' 'GPL3')
makedepends=("${MINGW_PACKAGE_PREFIX}-gcc-base")
#makedepends=("${MINGW_PACKAGE_PREFIX}-autotools")
source=(ftp://gcc.gnu.org/pub/gcc/infrastructure/gmp-${pkgver}.tar.bz2)
options=('staticlibs')
sha256sums=('936162c0312886c21581002b79932829aa048cfaf9937c6265aeaa14f1cd1775')

